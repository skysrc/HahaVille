<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Free HTML5 / Flash Mini Games</title>
    <meta name="description" content='@ViewBag.Description'>
    <meta name="keywords" content='@ViewBag.Keyword'>
    <meta property="og:title" content='@ViewBag.Title' />
    <meta property="og:type" content="website" />
    <meta property="og:description" content='@ViewBag.Description' />
    <meta property="og:url" content='@ViewBag.PageURL' />
    <meta property="og:image" content='@ViewBag.ImageURL' />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HahaVille Mini Games", "Index", "Home", null, new { @class = "navbar-brand" })</div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Games <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/games/category/adventure">Adventure</a></li>
                            <li><a href="~/games/category/shooting">Shooting</a></li>
                            <li><a href="~/games/category/puzzle">Puzzle</a></li>
                            <li><a href="~/games/category/sport">Sport</a></li>
                            <li><a href="~/games/category/arcade">Arcade</a></li>
                            <li><a href="~/games/category/girl">Girl</a></li> 
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
               
                <div class="span12">
                    <form id="custom-search-form" class="form-search form-horizontal pull-right">
                        <div class="">
                            <input type="text" class="search-query " placeholder="Search">
                            <button type="submit" class="btn"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </form>
                </div>
               
            </div>
        </div>
    </div>


    <div class="container body-content">
        <div class="row">
            <div class="col-xs-12 col-sm-2">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- Responsive Left Skycraper 1 -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-7913107103038018"
                     data-ad-slot="9582869582"
                     data-ad-format="auto"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
            <div class="col-xs-12 col-sm-8">
                @RenderBody()
            </div>
            <div class="col-xs-12 col-sm-2">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- Responsive Right Skycraper 1 -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-7913107103038018"
                     data-ad-slot="2059602782"
                     data-ad-format="auto"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>    
             </div>
        </div>
      
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hahaville Mini Games </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("JavaScript", required: false)
    @RenderSection("CSS", required: false)
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"></script>
</body>
</html>
