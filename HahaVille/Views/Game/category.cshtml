@model IEnumerable<HahaVille.Models.GameInfo>
@{
    ViewBag.Title = ViewBag.metatitle;
    ViewBag.Description = ViewBag.metadesc;
    ViewBag.Keyword = ViewBag.metakeyword;
    ViewBag.ImageURL = Url.AbsoluteContent("/favicon.ico"); 
    string categoryname = ViewBag.Name;
    ViewBag.PageURL = Url.AbsoluteContent("/games/category/" + categoryname.Replace(" ", "-"));
}
<div class="row">
   
    @{ var nCount = 0;
       var nTotalGames = Model.Count();
       }
    @Html.Raw("<h3>" + ViewBag.Name + " Games</h3>")
    <div id="gameImage" style="max-width: 932px;margin: 0px auto;">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- Responsive - Game Details -->
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-7913107103038018"
             data-ad-slot="7966535587"
             data-ad-format="auto"></ins>
        <script>
(adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div><br />


    @foreach (var game in Model.OrderBy(x => x.CategoryId).ThenBy(x => x.Id))
    {
        nCount++;
        if (nCount % 4 == 0)
        {
            <div class="col-md-3 col-sm-6 hvgames">
                <div class="thumbnail">
                    <a href="@("/games/" + game.Name.Replace(" ", "-"))">
                        <img width="160" height="180" src='@(game.Thumbnail)' />
                    </a>
                    <div class="caption">
                        <h3 style="height:53px">@game.Name</h3>
                        <p style="height:120px">@Html.Raw(game.Description)</p>
                        <p>
                            <br>
                            <a href="@("/games/" + game.Name.Replace(" ", "-"))" class="btn btn-success btn-block">PLAY</a>
                        </p>
                    </div>
                </div>
            </div>
            @Html.Raw("</div>")
        }
        else if (nCount % 4 == 1)
        {
            @Html.Raw("<div class='row text-center'>")

            <div class="col-md-3 col-sm-6 hvgames">
                <div class="thumbnail">
                    <a href="@("/games/" + game.Name.Replace(" ", "-"))">
                        <img width="160" height="180" src='@(game.Thumbnail)' />
                    </a>
                    <div class="caption">
                        <h3 style="height:53px">@game.Name</h3>
                        <p style="height:120px">@Html.Raw(game.Description)</p>
                        <p>
                            <br>
                            <a href="@("/games/" + game.Name.Replace(" ", "-"))" class="btn btn-success btn-block">PLAY</a>
                        </p>
                    </div>
                </div>
            </div>
            if(nCount == nTotalGames)
            {
                @Html.Raw("</div>")
            }
            
        }
        else if (nCount % 4 == 2)
        {
            <div class="col-md-3 col-sm-6 hvgames">
                <div class="thumbnail">
                    <a href="@("/games/" + game.Name.Replace(" ", "-"))">
                        <img width="160" height="180" src='@(game.Thumbnail)' />
                    </a>
                    <div class="caption">
                        <h3 style="height:53px">@game.Name</h3>
                        <p style="height:120px">@Html.Raw(game.Description)</p>
                        <p>
                            <br>
                            <a href="@("/games/" + game.Name.Replace(" ", "-"))" class="btn btn-success btn-block">PLAY</a>
                        </p>
                    </div>
                </div>
            </div>
          if(nCount == nTotalGames)
            {
                @Html.Raw("</div>")
            }
        }
        else if (nCount % 4 == 3)
        {
            <div class="col-md-3 col-sm-6 hvgames">
                <div class="thumbnail">
                    <a href="@("/games/" + game.Name.Replace(" ", "-"))">
                        <img width="160" height="180" src='@(game.Thumbnail)' />
                    </a>
                    <div class="caption">
                        <h3 style="height:53px">@game.Name</h3>
                        <p style="height:120px">@Html.Raw(game.Description)</p>
                        <p>
                            <br>
                            <a href="@("/games/" + game.Name.Replace(" ", "-"))" class="btn btn-success btn-block">PLAY</a>
                        </p>
                    </div>
                </div>
            </div>
          if(nCount == nTotalGames)
            {
                @Html.Raw("</div>")
            }
        }

    }
</div>
